<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    @RenderSection("styles", required: false)
    <title>Redd(k)it</title>
    <html lang="en">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
            <a href="/" class="navbar-brand">
            <i class="bi bi-code"></i>BlogApp
            </a>
            <ul class="navbar">
                @if(User.Identity!.IsAuthenticated){
                    <li class="nav-item">
                    <a href="/posts/list" class="nav-link">Posts</a>
                </li>
                    <li class="nav-item">
                    <a href="/profile/@User.Identity.Name" class="nav-link">@User.Identity.Name</a>
                </li>
                <li class="nav-item">
                    <a href="/users/logout" class="nav-link">Logout</a>
                </li>
                }else{
                <li class="nav-item">
                    <a href="/users/login" class="nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a href="/users/register" class="nav-link">Register</a>
                </li>
                }
            </ul>
        </div>
    </nav>
    <div class="content-body" mt-3">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>