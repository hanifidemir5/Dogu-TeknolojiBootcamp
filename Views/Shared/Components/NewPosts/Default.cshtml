@model List<Post>

<div class="card mt-3" style="min-width: 300px !important;">
    <div class="card-header">
        <h5 class="card-title">New Posts</h5>
    </div>
    <div class="card-body">
        @foreach(var post in Model){
        <div class="mb-3">
            <h6 class="mb-0">
                <a href="/blog/@post.Url" class="post-title">
                    @post.Title
                </a>
            </h6>
        </div>
        }
    </div>
</div>